  <%= f.label :username, "Your username here:" %>
  <%= f.text_field :username, placeholder: "Username" %>
  <br />
  <%= f.label :username, "Your email here:" %>
  <%= f.text_field :email, placeholder: "example@example.com" %>
  <br />
  <%= f.label :username, "Your password here:" %>
  <%= f.password_field :password %>
  <br />
  <%= f.submit %>
<% end %>
